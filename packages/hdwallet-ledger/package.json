{
  "name": "@shapeshiftoss/hdwallet-ledger",
  "version": "0.8.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "source": "src/index.ts",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.m.js",
  "scripts": {
    "build": "microbundle --name=ledgerHDWallet",
    "build:browser": "microbundle --target=web --external=none --name=ledgerHDWallet",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "clean": "rm -rf dist .rts2_*",
    "dev": "microbundle watch --name=ledgerHDWallet",
    "dev:browser": "microbundle watch --target=web --external=none --name=ledgerHDWallet",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.0",
    "@ledgerhq/live-common": "^7.15.4",
    "@shapeshiftoss/hdwallet-core": "^0.7.0",
    "base64-js": "^1.3.0",
    "bip32-path": "^0.4.2",
    "bitcoinjs-lib": "^5.0.3",
    "bitcoinjs-message": "^2.0.0",
    "buffer": "^5.4.3",
    "build-output-script": "^1.0.3",
    "create-xpub": "^2.1.0",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^6.1.0",
    "eventemitter2": "^5.0.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/ethereumjs-tx": "^1.0.1",
    "microbundle": "^0.11.0"
  }
}
